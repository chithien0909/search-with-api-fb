<%- contentFor('header') %>

<%- contentFor('footer') %>
<%- contentFor('body') %>

<div class="container">

    <form class="form-search" action="./search">
        <h1 class="title">What are you looking for ?</h1>
        <div class="input-group mb-3">
            <input name="input" type="text" class="form-control" placeholder="What are you looking for ?"
                   aria-label="Recipient's username" aria-describedby="basic-addon2">
            <div class="input-group-append">

                <button class="btn btn-success" type="submit">Search</button>
            </div>
        </div>
    </form>
    <div class="results">
        <h1 class="title">Result: <span>(<%=results.length%>)</span></h1>
        <div class="list-result">
            <%for (var i = 0; i < results.length; i++) {    %><%
                var res = results[i]
                        , {rating_count,phone,link,name,picture,description,about,location,single_line_address,cover,checkins} = res;
                var {url} = picture.data;
                var {height,width} = picture.data;
            %><%# comment %>
            <div class="box">
                <div class="top">
                    <img src=<%= url%> alt="Image">
                    <a href=<%= link%>><%= name %></a>
                </div>
                <p class="sub-title">Checkins: <span><%=checkins%></span></p>
                <p class="sub-title">About: <span><%= about%></span></p>
                <p class="sub-title">Address: <span><%= single_line_address %></span></p>
                <p class="sub-title">Phone <span><%= phone%></span></p>
                <% if(cover) {%>
                <img class="cover-image" src=<%=cover.source  %> alt="">

                <%}%>
            </div>
            <%}-%>
        </div>

    </div>
</div>